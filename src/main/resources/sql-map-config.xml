<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>

	<!-- 매핑에 등록된 객체의 별칭을 지정하는 곳 -->
	<typeAliases>
		<typeAlias type="com.blue.dto.MemberVO" alias = "member"/>
		<typeAlias type="com.blue.dto.PostVO" alias = "post"/>
		<typeAlias type="com.blue.dto.ReplyVO" alias = "reply"/>
		<typeAlias type="com.blue.dto.LikeVO" alias = "like"/>
		<typeAlias type = "com.blue.dto.FollowVO" alias = "follow"/>
		<typeAlias type = "com.blue.dto.QnaVO" alias = "qna"/>
	</typeAliases>

	<!-- SQL 매핑 파일 등록 -->
	<!-- 매핑 파일의 위치를 지정하는 곳 -->
	<mappers>
		<mapper resource="mappings/member-mapping.xml"/>
		<mapper resource="mappings/post-mapping.xml"/>
		<mapper resource="mappings/reply-mapping.xml"/>
		<mapper resource="mappings/like-mapping.xml"/>
		<mapper resource="mappings/follow-mapping.xml"/>
		<mapper resource="mappings/qna-mapping.xml"/>
	</mappers>
</configuration>







